
{% extends 'dashboard.html.twig' %}




{% block body %}





<div class="row">
    <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">ADD EVENEMENT</h5>

                <!-- General Form Elements -->
                {{ form_start(formc,{attr:{novalidate:'novalidate'}}) }}
                <label for="inputText" class="col-sm-10 col-form-label">nom</label>
                <div class="col-sm-10">
                    {{ form_widget(formc.nom,{'attr':{'class':'form-control'}}) }}


                </div>
                {{ form_errors(formc.nom,{'attr':{'class':'form-danger'}}) }}


                <label for="inputText" class="col-sm-10 col-form-label">prix</label>
                <div class="col-sm-10">
                    {{ form_widget(formc.prix,{'attr':{'class':'form-control'}}) }}

                </div>
                {{ form_errors(formc.prix,{'attr':{'class':'form-danger'}}) }}

                <label for="inputText" class="col-sm-10 col-form-label">recompense</label>
                <div class="col-sm-10">
                    {{ form_widget(formc.recompense,{'attr':{'class':'form-control'}}) }}

                </div>
                {{ form_errors(formc.recompense,{'attr':{'class':'form-danger'}}) }}


                <br/>
                <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                    {{ form_widget(formc.ajouter,{'attr':{'class':'btn btn-primary'}}) }}
                </div>


                {{ form_end(formc) }}

            </div>
        </div>

    </div>
</div>


{% endblock %}







