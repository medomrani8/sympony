


{% extends 'frontbase.html.twig' %}

{% block body %}




    <section class="bet-this-game">
        <div class="overlay pt-120 pb-120">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="section-header text-center">
                            <h5 class="sub-title">Sports Escrow Bets Peer 2 Peer</h5>
                            <h2 class="title">LISTE DES EVENEMENTS</h2>
                            <p>Use the power of Bitbetio Bets Fast, Anonymous, Secured, Automatic, Trustworthy</p>
                        </div>
                    </div>
                </div>
                <div class="row cus-mar">
                    {% for g in evenement %}
                    <div class="col-lg-6">


                         <div class="single-area">
                            <div class="head-area d-flex align-items-center">
                                <span class="mdr cmn-btn">{{ g.nom }}</span>
                                <p>{{g.dateeven|date('d/m/Y')}}</p>
                            </div>
                            <div class="main-content">
                                <div class="team-single">
                                    <h4>recompense</h4>
                                    <span class="mdr">{{ g.recompense }}</span>
                                    <div class="img-area">
                                        <img src="{{ asset('FrontOffice/assets/images/team-logo-1.png" alt="image') }}">
                                    </div>
                                </div>
                                <div class="mid-area text-center">
                                    <div class="img-area">
                                        <td> <img style="width: 200px; height:200px" src="{{asset('uploads/images/') ~ g.photo }}" class="img-responsive" alt="Image"></td>
                                    </div>


                                    <h6>PRIX : {{ g.prix }} DT  </h6>
                                </div>
                                <div class="team-single">

                                </div>
                            </div>
                            <div class="bottom-item">
                                <button type="button" class="cmn-btn firstTeam" data-bs-toggle="modal"
                                        data-bs-target="#betpop-up">Eagle will win</button>
                                <button type="button" class="cmn-btn draw" data-bs-toggle="modal"
                                        data-bs-target="#betpop-up">Draw</button>
                                <button type="button" class="cmn-btn lastTeam" data-bs-toggle="modal"
                                        data-bs-target="#betpop-up">Paeek will win</button>


                            </div>
                         </div>


                    </div>
                    {% endfor %}


                </div>
                <div class="row">
                    <div class="col-lg-12 d-flex justify-content-center">
                        <div class="bottom-area mt-60">
                            <span class="btn-border">

                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="betpopmodal">
        <div class="modal fade" id="betpop-up" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-xxl-8 col-xl-9 col-lg-11">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                </div>
                                <div class="modal-body">

                                                    <table class="table table-striped">
                                                        <thead>
                                                        <tr>
                                                            <th>Nom</th>
                                                            <th>commentaire</th>
                                                            <th>date </th>
                                                            <th>note</th>



                                                        </tr>
                                                        </thead>
                                                        <tbody>
                                                        {% for c in commentaire %}
                                                            <tr>
                                                                <td>{{ c.nom }}</td>
                                                                <td>{{ c.comment }}</td>
                                                                <td>{{c.dateCom|date('d/m/Y')}}</td>
                                                                <td>{{ c.note }}</td>




                                                            </tr>

                                                        {% endfor %}

                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>

                                        </div>
                                    </div>



                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>






{% endblock %}