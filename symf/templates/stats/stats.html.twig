{% extends 'base.html.twig' %}


{% block body %}

                        <div class="container">
                            <h1> &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp     Match par type </h1>
                            <canvas id="matchs" width="1000" height="500"></canvas>

                        </div>

                        <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.js" integrity="sha256-t9UJPrESBeG2ojKTIcFLPGF7nHi2vEc7f5A2KpH/UBU=" crossorigin="anonymous"></script>
                        <script>
                            let matchs = document.querySelector("#matchs")
                            let matchGraph = new Chart(matchs, {
                                type: "pie",
                                data: {
                                    labels:  ['Football', 'Handball', 'Volleyball'],
                                    datasets: [{
                                        label: "Répartition des catégories",
                                        data: ['{{ nfoot }}', {{ nhand}}, {{ nvol }}],
                                        backgroundColor: ['#FF5733','#FFBD33','#DBFF33']
                                    }]
                                }
                            })
                        </script>
                    </div>                </div>

{% endblock %}